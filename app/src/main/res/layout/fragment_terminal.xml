<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/terminal_box"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/terminal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="10sp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/terminal_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="10sp"
        android:textSize="14sp"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/terminal_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:orientation="horizontal"
        android:padding="10sp">

        <ImageButton
            android:id="@+id/terminal_shut_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/power_off" />

        <ImageButton
            android:id="@+id/terminal_reboot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/reboot" />

        <ImageButton
            android:id="@+id/terminal_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/sign_out"
            tools:visibility="gone" />
    </LinearLayout>

</LinearLayout>