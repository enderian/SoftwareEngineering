<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LabActivity"
    android:orientation="vertical"
    android:background="@color/activityBackground">

    <ExpandableListView
        android:id="@+id/labListParrent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorList">

        <ExpandableListView
            android:id="@+id/labListFirstChild"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorList"></ExpandableListView>

        <ExpandableListView
            android:id="@+id/labListSecondChild"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorList">

        </ExpandableListView>
    </ExpandableListView>

</LinearLayout>